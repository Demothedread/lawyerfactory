{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/${file}",
            "console": "integratedTerminal",
            "preLaunchTask": "format-python",
            "justMyCode": true,
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Python: Django (manage.py runserver)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "format-python",
            "env": {
                "DJANGO_SETTINGS_MODULE": "project.settings",
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Flask (app)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/flask",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "format-python",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "--maxfail=1",
                "-q"
            ],
            "preLaunchTask": "format-python",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Attach (remote debugpy)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "justMyCode": true
        },
        {
            "name": "Node: Launch Program",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Node: Attach (9229)",
            "type": "pwa-node",
            "request": "attach",
            "port": 9229,
            "restart": false,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Debug All (Python + Node)",
            "configurations": [
                "Python Debugger: Python File",
                "Node: Launch Program"
            ]
        }
    ]
}