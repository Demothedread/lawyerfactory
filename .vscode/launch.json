{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Site with Puppeteer",
            "program": "${workspaceFolder}/${input:puppeteerScript}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/${file}",
            "console": "integratedTerminal",
            "preLaunchTask": "format-python",
            "justMyCode": true,
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Python: Django (manage.py runserver)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "format-python",
            "env": {
                "DJANGO_SETTINGS_MODULE": "project.settings",
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Flask-SocketIO (simple_server)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apps/api/simple_server.py",
            "console": "integratedTerminal",
            "preLaunchTask": "format-python",
            "env": {
                "FLASK_ENV": "development",
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "--maxfail=1",
                "-q"
            ],
            "preLaunchTask": "format-python",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Attach (remote debugpy)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "justMyCode": true
        },
        {
            "name": "Node: Launch Program",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/launch-dev.sh",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Node: Attach (9229)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": false,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Debug All (Python + Node)",
            "configurations": [
                {
                    "name": "Node: Launch Program",
                    "type": "node",
                    "request": "launch",
                    "program": "${workspaceFolder}/apps/ui/react-app/node_modules/.bin/vite",
                    "args": [
                        "--host",
                        "0.0.0.0",
                        "--port",
                        "3000"
                    ],
                    "cwd": "${workspaceFolder}/apps/ui/react-app",
                    "console": "integratedTerminal",
                    "env": {
                        "NODE_ENV": "development"
                    },
                    "preLaunchTask": "npm: dev - apps/ui/react-app",
                    "outFiles": [
                        "${workspaceFolder}/apps/ui/react-app/dist/**/*.js"
                    ]
                },
                "Python Debugger: Python File"
            ]
        },
    ],
    "Python Debugger: Python File": {
        "inputs": [],
        "options": {
            "cwd": "${workspaceFolder}"
        }
    },
    "Python: Django (manage.py runserver)": {
        "inputs": [],
        "options": {
            "cwd": "${workspaceFolder}"
        }
    },
    "Python: Flask-SocketIO (simple_server)": {
        "inputs": [],
        "options": {
            "cwd": "${workspaceFolder}"
        }
    },
    "Python: pytest": {
        "inputs": [],
        "options": {
            "cwd": "${workspaceFolder}"
        }
    },
    "inputs": [
        {
            "type": "promptString",
            "id": "puppeteerScript",
            "description": "Path to your Puppeteer evaluation script (e.g., test/evaluate-site.js)"
        }
    ]
}